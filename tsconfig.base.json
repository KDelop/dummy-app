{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "sourceMap": true,
    "jsx": "preserve",
    "typeRoots": [
      "node_modules/@types",
      "node_modules/@dummy-app/types"
    ],
    "noImplicitAny": false,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "plugins": [
      {
        "name": "typescript-tslint-plugin"
      }
    ]
  },
  "paths": {
    "@dummy-app/*": [
      "./packages/*"
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.config.js",
    ".eslintrc.js",
    "**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "apps/*/public"
  ]
}